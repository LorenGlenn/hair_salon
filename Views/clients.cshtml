<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Stylist</title>
  </head>
  <h3>Click a client name to see more information:</h3>
  <body>
    @foreach(var client in Model)
    {
      Clients:
        <ul>
          @foreach(var customer in Model)
          {
            <li><a href="/client/@customer.GetId()">@customer.GetName()</a></li>
          }
        </ul>
      <br>
    }
    <button type="button"><a href="/">Home</a></button>
  </body>
</html>

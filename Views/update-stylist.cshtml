<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
    <title>Update</title>
  </head>
  <body>
    <div class="container">
      <div class="stylists">
        <h3>Update Stylist @Model.GetName():</h3>
        <form action="/stylist-updated/@Model.GetId()" method="post">
          <div>
            <label for="name">Name:</label>
            <input type="text" name="name" placeholder="@Model.GetName()" required>
          </div>
          <div>
            <label for="hair">Hours:</label>
            <input type="text" name="hours" placeholder="@Model.GetHours()" required>
          </div>
          <div>
            <label for="phone">Phone:</label>
            <input type="text" name="phone" placeholder="@Model.GetPhone()" required>
          </div>
          <button type="submit" class="btn btn-success">Submit</button>
        </form>
        <button type="button" class="btn btn-success"><a href="/">Go Home</a></button>
      </div>
    </div>
  </body>
</html>
